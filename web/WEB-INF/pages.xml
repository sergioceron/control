        <action execute="#{navigationController.setActive('/admin/evaluacion.periodo.seam')}" />
        <navigation from-action="#{evaluacionController.save}">
            <rule if-outcome="success">
                <redirect view-id="/admin/evaluacion.list.xhtml"/>
            </rule>
            <rule  if-outcome="failure">
                <redirect  view-id="/admin/evaluacion.periodo.xhtml">
                    <param name="err" value="1"/>
                </redirect>
            </rule>
            <rule  if-outcome="failureB">
                <redirect  view-id="/admin/evaluacion.periodo.xhtml">
                    <param name="err" value="2"/>
                </redirect>
            </rule>
        </navigation>


    </page>
    <page view-id="/admin/evaluacion.list.xhtml">

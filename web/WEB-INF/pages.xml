        <action execute="#{navigationController.setActive('/admin/evaluacion.seam')}" />

        <navigation from-action="#{evaluacionController.saveEvaluacionRespuesta}">
            <rule if-outcome="success">
                <redirect  include-page-params="true" view-id="/admin/alumno.calificaciones.xhtml"></redirect>
            </rule>
            <rule if-outcome="final">
                <redirect  include-page-params="true" view-id="/admin/index.xhtml"></redirect>
            </rule>
        </navigation>
    </page>


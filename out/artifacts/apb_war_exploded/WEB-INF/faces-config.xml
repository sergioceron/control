<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.1"
              xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd">

    <render-kit>
        <renderer>
            <component-family>javax.faces.Input</component-family>
            <renderer-type>javax.faces.Text</renderer-type>
            <renderer-class>com.allplacesbook.www.utils.CustomTextinputRenderer</renderer-class>
        </renderer>
        <renderer>
            <component-family>javax.faces.Input</component-family>
            <renderer-type>javax.faces.Secret</renderer-type>
            <renderer-class>com.allplacesbook.www.utils.CustomSecretinputRenderer</renderer-class>
        </renderer>
    </render-kit>

</faces-config>
